#!/usr/bin/env php
<?php declare(strict_types=1);

use Symfony\Component\Console\Application;

$rootDir = dirname(__FILE__, 2);
$loader  = include "{$rootDir}/includes/loader.php";

require_once $loader($rootDir);

$app = new Application('1.0.0', 'WP Auto Semantic Versioning');

try {
    $app->run();
} catch (\Exception $e) {
    print $e->getMessage();
    exit($e->getCode());
}
